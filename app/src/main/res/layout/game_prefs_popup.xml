<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle">

    <LinearLayout
        android:background="@color/black_overlay"

        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <sportsfight.com.s.common.Heading
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14pt"
                android:text="@string/preferencesupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:weightSum="4"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <ImageButton
                            android:id="@+id/chess"
                            android:src="@drawable/chess"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/pool"
                            android:src="@drawable/snooker"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/basketball"
                            android:src="@drawable/mini_basketball"
                            android:padding="8dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/airhockey"
                            android:src="@drawable/air_hockey"
                            android:padding="8dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:weightSum="4"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <ImageButton
                            android:id="@+id/foosball"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/football"
                            android:padding="8dp"
                            android:scaleType="centerCrop"

                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <ImageButton
                            android:id="@+id/tt"
                            android:src="@drawable/tt"
                            android:padding="6dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <ImageButton
                            android:id="@+id/carrom"
                            android:src="@drawable/carroms"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <ImageButton
                            android:id="@+id/mini_golf"
                            android:src="@drawable/glolf"
                            android:padding="12dp"
                            android:scaleType="centerCrop"

                            android:background="@drawable/selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/submit"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:text="Submit"
                        android:background="@drawable/purplebutton"
                        android:layout_gravity="center"
                        android:layout_width="140dp"
                        android:textSize="6pt"
                        android:layout_height="40dp" />
                </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        </LinearLayout>

    </LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <sportsfight.com.s.common.Bold_TextView
            android:textColor="@color/tabselected"
            android:id="@+id/playerListHeading"
            android:text="Tournaments near you "
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/available_players"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/tabunselected"
            android:text="(5)"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/viewall"
            android:textColor="#5d8de4"
            android:text="View All"
            android:layout_marginRight="10dp"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
<ImageView
    android:padding="3dp"
    android:scaleType="fitXY"
    android:src="@drawable/tournament1"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle"
    android:layout_width="match_parent"
    android:layout_height="140dp" />
</LinearLayout>

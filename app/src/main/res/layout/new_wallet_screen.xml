<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/header"
android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/grey_rounded_corner"

        android:layout_height="150dp"></LinearLayout>
        <ImageView
            android:alpha="0.3"
            android:src="@drawable/card_bg"
            android:layout_marginRight="-20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="180dp"
            android:layout_marginBottom="-20dp"
            android:layout_height="match_parent" />
        <ImageView

            android:src="@drawable/coin"
            android:layout_marginRight="-20dp"
            android:layout_alignParentLeft="true"
android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_marginBottom="-20dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/tabselected"
                android:text="Available Coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <sportsfight.com.s.common.Bold_TextView
                android:textSize="24dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black_font"
                android:text="11685"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/white_rounded_corner"
            android:layout_marginBottom="-26dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="285dp"
            android:layout_height="60dp">

        </RelativeLayout>

    </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/rounded_corner_button"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="133dp"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="45dp" >
    <Button
        android:textColor="@color/white"
        android:background="@null"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:text="Add Coins"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
        <View
            android:background="@color/white"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <Button
            android:textColor="@color/white"
            android:background="@null"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:text="Transfer"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:background="@color/white"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <Button
            android:textColor="@color/white"
            android:background="@null"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:text="Redeem"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
    <LinearLayout

        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <sportsfight.com.s.common.Bold_TextView
        android:textSize="16dp"

        android:textColor="@color/black_font"
        android:text="Available Coins"
        android:layout_weight="2.8"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/settings"
            android:src="@drawable/settings"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/all"
                android:background="@drawable/rounded_corner_button"
                android:gravity="center"
                android:text="All"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/won"
                android:gravity="center"
                android:textColor="@color/black_font"
                android:text="Won"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/spend"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="Spend"
                android:textColor="@color/black_font"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:textAllCaps="true"
                android:id="@+id/added"
                android:gravity="center"
                android:textColor="@color/black_font"
                android:text="Added"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:layout_marginBottom="50dp"
            android:id="@+id/view_pager"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    </RelativeLayout>

    </ScrollView>
</LinearLayout>

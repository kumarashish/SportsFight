<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
android:background="#80000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/white_rounded_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<sportsfight.com.s.common.Bold_TextView
    android:textColor="@color/black_font"
    android:gravity="center"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text="Update Profile"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <sportsfight.com.s.common.CircleImageView
        android:layout_width="90dp"
      android:id="@+id/profile_pic"
        android:layout_height="90dp" />
        <Button
            android:id="@+id/update_profilepic"
            android:text="CHANGE"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_gradient_button"
            android:layout_width="110dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:background="@drawable/grey_box"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView

            android:src="@drawable/profile_black"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <EditText
            android:textSize="16dp"
            android:textColor="@color/black_font"
            android:id="@+id/name"
            android:text=""
            android:maxLength="15"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:background="@drawable/diabled_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView

            android:src="@drawable/email_black"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <EditText
            android:textSize="16dp"
            android:textColor="@color/black_font"
            android:text=""
            android:focusable="false"
            android:id="@+id/email"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:background="@drawable/diabled_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView

            android:src="@drawable/mobile_black"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <EditText
            android:focusable="false"
            android:id="@+id/mobile"
            android:textColor="@color/black_font"
            android:text=""
            android:textSize="16dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:background="@drawable/grey_box"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView

            android:src="@drawable/gender_icon_black"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/gender"
            android:textColor="@color/black_font"
            android:layout_marginRight="30dp"
            android:textSize="16dp"
android:entries="@array/gender"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/drop_down"
                android:src="@drawable/drop_down"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="15dp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="CANCEL"
            android:id="@+id/cancel"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_gradient_button"
            android:layout_width="110dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/save"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_gradient_button"
            android:layout_width="110dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>

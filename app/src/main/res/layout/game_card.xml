<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="80dp"
    android:weightSum="4"

    >
    <LinearLayout
        android:background="@drawable/white_card"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/gameIcon"
            android:src="@drawable/tt_new"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/gameTitle"
            android:textSize="10dp"
            android:textColor="@color/black_font"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="Table Tennis"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rightSidebox"
        android:background="@drawable/right_side_card_enabled"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:weightSum="2"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
android:id="@+id/enabledView"

                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/disable"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:gravity="center"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black_font"
                android:text="Disable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:id="@+id/disableButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/disabledView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_marginTop="1dp"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="1dp"

                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                          android:src="@drawable/enable"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp" />
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/black_font"
                            android:gravity="center"
                            android:layout_width="match_parent"

                            android:text="Enable"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                        <View
                            android:id="@+id/enableButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/light_grey"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"></View>
                    <RelativeLayout
                        android:layout_marginTop="1dp"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <LinearLayout


                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/delete"
                            android:padding="1dp"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp" />
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/black_font"
                            android:gravity="center"
                            android:layout_width="match_parent"

                            android:text="Delete"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                        <View
                            android:id="@+id/deleteButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout

                android:layout_weight="2.1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/levelTitle"
                    android:layout_marginTop="5dp"
                    android:textSize="9dp"
                    android:textColor="@color/black_font"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:text="Level"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/levelValue"
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:paddingLeft="5dp"
                    android:text="Intermediate"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/rankTitle"
                    android:layout_marginTop="5dp"
                    android:textSize="9dp"
                    android:textColor="@color/black_font"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:text="Rank"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rankValue"
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:paddingLeft="5dp"
                    android:text="2568"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <sportsfight.com.s.common.Heading
        android:id="@+id/heading"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Result(06)"
        android:textSize="18dp"
        android:textColor="@color/black_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <sportsfight.com.s.common.Heading
            android:id="@+id/viewAllResult"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/viewall"
            android:gravity="end|center_vertical"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:textColor="@color/black_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/heading"

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center">
    <sportsfight.com.s.common.CustomLayout
        android:id="@+id/cardview"
        android:background="@drawable/orange_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tticon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/tt_orange_icon" />

                <sportsfight.com.s.common.BoldFont
                    android:id="@+id/info_text"
android:layout_marginTop="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tticon"
                    android:gravity="center_vertical"
                    android:text="TABLE TENNIS"
                    android:textColor="@color/orangecolor"
                    android:textSize="23dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/linearLayout"
                android:src="@drawable/ribbon" />
            <LinearLayout
                android:id="@+id/middleView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/linearLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/leftview"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <sportsfight.com.s.common.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"


                        />

                    <ImageView
                        android:id="@+id/player1Won"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignBottom="@+id/circleImageView"
                      android:layout_marginRight="-5dp"
                        android:src="@drawable/medal"
                        android:visibility="gone"
                        android:layout_alignEnd="@+id/circleImageView" />
                </RelativeLayout>
<LinearLayout

    android:layout_weight="0.5"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
                <sportsfight.com.s.common.CongratsFont
                    android:id="@+id/congratulation"

                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@color/red"
                   android:text="Congratulation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
    <sportsfight.com.s.common.BoldFont
        android:id="@+id/vs"
android:layout_marginTop="-5dp"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="@color/black_font"
        android:text="V/S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
                <RelativeLayout
                    android:id="@+id/rightView"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <sportsfight.com.s.common.CircleImageView
                        android:id="@+id/circleImageView2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerInParent="true"

                        android:layout_marginTop="5dp"


                       />

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignBottom="@+id/circleImageView2"
android:visibility="gone"
                        android:id="@+id/player2Won"
                        android:src="@drawable/medal"
                        android:layout_marginEnd="-5dp"
                        android:layout_alignEnd="@+id/circleImageView2" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/firstPlayer"
                android:layout_marginLeft="35dp"
                android:layout_below="@+id/middleView"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Player1Name"

                android:gravity="center"
                android:maxLength="12"
                android:textColor="@color/black_font"
                android:textSize="12dp"
                android:text="Sandeep J"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Player1Bid"
                android:gravity="center"
                android:textSize="12dp"
                android:text="Bids: 600 pts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
android:paddingLeft="5dp"
                android:layout_marginTop="-10dp"
                android:paddingRight="5dp"
                android:layout_below="@+id/middleView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/firstPlayer"
                android:layout_toStartOf="@+id/secondPlayer">
                <TextView
                    android:gravity="center"
                    android:id="@+id/yourBid"
                    android:text="Your Bid :127 pts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/result"
    android:layout_marginTop="5dp"
                    android:textColor="@color/black_font"
                    android:gravity="center"
                    android:paddingRight="1dp"
                    android:textSize="12dp"
                    android:text="You have won :1127 pts "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/secondPlayer"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_below="@+id/middleView"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Player2Name"
                    android:maxLength="12"
                    android:textColor="@color/black_font"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:text="Madhu Sudan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/Player2Bid"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:paddingRight="1dp"
                    android:text="Bids: 1282 pts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </sportsfight.com.s.common.CustomLayout>
</LinearLayout>
        <nl.dionsegijn.konfetti.KonfettiView
            android:id="@+id/viewKonfetti"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </RelativeLayout>

</LinearLayout>
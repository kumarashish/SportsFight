<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_welcome" android:background="@drawable/app_bg">

        <LinearLayout
            android:background="@color/black_overlay"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <sportsfight.com.s.common.Heading
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14pt"
                    android:text="@string/preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <sportsfight.com.s.common.DetailsCustomTextView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/light_grey"
                    android:textSize="8pt"
                    android:text="@string/preferencesdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/gameList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/submit"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Submit"
                android:background="@drawable/purplebutton"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:textSize="6pt"
                android:layout_height="40dp" />
                </LinearLayout>
                </ScrollView>
            </LinearLayout>

            </LinearLayout>
        <ImageView

            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_width="200dp"
            android:layout_height="150dp" />
    </RelativeLayout>
    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:backgroundTint="@color/black_font"
            android:id="@+id/back"
            android:background="@drawable/back"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
    <TextView
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black_font"
        android:text="Please Select your"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black_font"
            android:text="Favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <sportsfight.com.s.common.Bold_TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/tabselected"
            android:text="Ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_font"
            android:text="to Play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radio_gp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/choose_below"
            android:text="Choose from below"
            android:textSize="12dp"
            android:buttonTint="@color/tabselected"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/skip_know"
            android:textSize="12dp"
            android:text="Skip for know "
            android:buttonTint="@color/tabselected"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="vertical"
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <sportsfight.com.s.common.Bold_TextView

            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_font"
            android:text="Select from already booked grounds "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <sportsfight.com.s.common.Bold_TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="25dp">

        <View
          android:layout_weight="1.5"
            android:layout_gravity="center"
            android:background="@color/black_font"
            android:layout_width="0dp"
            android:layout_height="0.5dp"/>
            <Button
                android:layout_weight="1"
                android:background="@drawable/white_button"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:text="OR"
                android:layout_height="match_parent" />
            <View
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@color/black_font"

                android:layout_width="0dp"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout
       android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textSize="16dp"


                android:textColor="@color/black_font"
                android:text="Suggested Nearby grounds "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <View
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:background="@color/black_font"
                android:layout_width="0dp"
                android:layout_height="0.5dp"/>
            <Button
                android:layout_weight="1"
                android:background="@drawable/white_button"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:text="OR"
                android:layout_height="match_parent" />
            <View
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@color/black_font"

                android:layout_width="0dp"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/orangebox_white_bg"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
        <RadioButton
            android:text="Others"
            android:buttonTint="@color/tabselected"
android:layout_margin="5dp"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#99FFFFFF" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/cancel"
                android:background="@drawable/grey_gradient_button"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="35dp" />
            <View
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <Button
                android:text="Next"
                android:id="@+id/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:background="@drawable/orange_gradient_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:background="@drawable/grey_circle"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/orange_gradient_button"
                    android:layout_width="30dp"
                    android:layout_height="15dp" />
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/grey_circle"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/grey_circle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
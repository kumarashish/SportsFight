<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle"
    android:orientation="vertical">
    <RelativeLayout

        android:background="@color/black_overlay"
        android:layout_gravity="center"
        android:layout_margin="20dp"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <sportsfight.com.s.common.Heading
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:id="@+id/heading"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:text="Update Email Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="15dp"
                    android:background="@drawable/blurr_bg_edittext"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/icon"
                        android:padding="6dp"
                        android:src="@drawable/email"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <View
                        android:layout_margin="1dp"
                        android:background="@color/white"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/email_mobile"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:singleLine="true"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:hint="Enter Email Id"
                        android:background="@color/blurrbg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:weightSum="2"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:visibility="invisible"
                        android:id="@+id/cancel"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Cancel"
                        android:textSize="8pt"
                        android:background="@drawable/purplebutton"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />
                    <View
                        android:layout_width="20dp"
                        android:layout_height="40dp" />
                    <Button
                        android:id="@+id/submit"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Submit"

                        android:background="@drawable/purplebutton"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
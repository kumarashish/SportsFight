<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rectangle"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:src="@drawable/game_orange_icon"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <sportsfight.com.s.common.Bold_TextView
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black_font"
                    android:textSize="18dp"
                    android:text="Congratulations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/light_grey"
                    android:text="You won 150 coins against match with prabahas in table tennis."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <sportsfight.com.s.common.Bold_TextView
                    android:layout_marginTop="20dp"

                    android:textColor="@color/BeginnerColor"
                    android:textSize="22dp"
                    android:text="150"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12dp"

                    android:textColor="@color/light_grey"
                    android:text="24/09/2018"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

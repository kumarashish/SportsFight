<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header"

        android:layout_width="match_parent"
        android:layout_height="40dp">
        <sportsfight.com.s.common.Heading
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="My Matches(02)"
            android:id="@+id/heading"
            android:textColor="@color/black_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <sportsfight.com.s.common.Heading
            android:id="@+id/viewAllResult"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/viewall"
            android:gravity="end|center_vertical"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:textColor="@color/black_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center">
        <sportsfight.com.s.common.CustomLayout
            android:id="@+id/cardview"
            android:background="@drawable/dark_brown_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tticon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/chess_orange" />

                    <sportsfight.com.s.common.BoldFont
                        android:id="@+id/info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="-7dp"
                        android:layout_toEndOf="@+id/tticon"
                        android:gravity="center_vertical"
                        android:text="CHESS"
                        android:textColor="@color/browncolor"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <TextView
                    android:id="@+id/bid_count"

                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/black_font"
                    android:text="Total bid (Current) : 1206 pts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/linearLayout"
                     />

                <LinearLayout
                    android:id="@+id/middleView"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/linearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/leftview"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <sportsfight.com.s.common.CircleImageView
                            android:id="@+id/circleImageView"

                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"


                             />


                    </RelativeLayout>
                    <LinearLayout

                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <sportsfight.com.s.common.BoldFont
                            android:id="@+id/vs"
                            android:layout_marginTop="25dp"
                            android:gravity="center"
                            android:textSize="22dp"
                            android:textColor="@color/black_font"
                            android:text="V/S"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rightView"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <sportsfight.com.s.common.CircleImageView
                            android:id="@+id/circleImageView2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"

                            android:layout_marginTop="5dp"



                             />


                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/firstPlayer"
                    android:layout_marginLeft="25dp"
                    android:layout_below="@+id/middleView"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Player1Name"

                        android:gravity="center"
                        android:maxLength="12"
                        android:textColor="@color/black_font"
                        android:textSize="12dp"
                        android:text="Sandeep J"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/Player1Bid"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="Bids: 600 pts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="5dp"

                    android:paddingRight="5dp"
                    android:layout_below="@+id/middleView"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/firstPlayer"
                    android:layout_toStartOf="@+id/secondPlayer"
                    android:layout_marginTop="5dp"
                    android:id="@+id/linearLayout2">
                    <TextView
                        android:gravity="center"
android:textColor="@color/black_font"
                        android:id="@+id/date"
                        android:textSize="12dp"
                        android:text="Date: 29-jan-2018"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/secondPlayer"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/middleView"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Player2Name"
                        android:maxLength="12"
                        android:textColor="@color/black_font"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:text="Madhu Sudan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/Player2Bid"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:paddingRight="1dp"
                        android:text="Bids: 1282 pts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:textSize="12dp"
                    android:id="@+id/time"

                    android:textColor="@color/black_font"
                    android:gravity="center"
                    android:paddingRight="1dp"

                    android:text="Time: 3:30 pm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </sportsfight.com.s.common.CustomLayout>
    </LinearLayout>
</LinearLayout>
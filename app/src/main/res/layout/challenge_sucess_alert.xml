<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black_font"
        android:text="Congratulation ! "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black_font"
            android:text="Your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <sportsfight.com.s.common.Bold_TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/tabselected"
            android:text="Challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_font"
            android:text="has been send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/teamLabel"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_grey"
            android:text="Team Name "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/teamValue"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_font"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_font"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView

            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_grey"
            android:text="Game "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/game"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_font"
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_font"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView

            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_grey"
            android:text="Ground "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ground"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_font"
            android:text="N/A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_font"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView

            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_grey"
            android:text="Date and  Time "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date_time"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_font"
            android:text="  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_font"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView

            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_grey"
            android:text="Challenge Coins "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_font"
            android:text=""
            android:id="@+id/challenge_Coins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <Button
                android:id="@+id/done"
                android:text="Done"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/orange_gradient_button"
               android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="35dp" />


    </RelativeLayout>
</LinearLayout>